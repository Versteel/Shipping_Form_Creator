<UserControl
    x:Class="Shipping_Form_CreatorV1.Components.PackingListNotesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shipping_Form_CreatorV1.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1200"
    d:DesignWidth="900"
    Background="#e6e6e6"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </UserControl.Resources>
    <Border Padding="20" Background="#e6e6e6">
        <Border
            x:Name="PackingListNotesPage1PrintArea"
            MinWidth="816"
            MinHeight="1056"
            MaxWidth="816"
            MaxHeight="1056"
            Padding="24,48"
            HorizontalAlignment="Center"
            Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <local:ReportHeaderControl
                    Grid.Row="0"
                    Header="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    PageNumberText="{Binding PageNumberText, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                <ScrollViewer
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            Padding="5"
                            Background="#e6e6e6"
                            FontSize="22"
                            FontWeight="Bold"
                            Text="Shipping Instructions &amp; Notifications"
                            TextAlignment="Center" />
                        <ItemsControl Margin="0,10,0,15" ItemsSource="{Binding ShippingInstructions, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="14"
                                        Foreground="#000"
                                        Text="{Binding}"
                                        TextWrapping="Wrap" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock
                            Padding="5"
                            Background="#e6e6e6"
                            FontSize="22"
                            FontWeight="Bold"
                            Text="Consolidated Shipment Summary"
                            TextAlignment="Center" />
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Background="#e6e6e6"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="450" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Column="0"
                                        BorderBrush="Black"
                                        BorderThickness="0,0,1,0">
                                        <TextBlock
                                            Padding="5"
                                            FontWeight="Bold"
                                            Text="Item Description" />
                                    </Border>
                                    <Border
                                        Grid.Column="1"
                                        BorderBrush="Black"
                                        BorderThickness="0,0,1,0">
                                        <TextBlock
                                            Padding="5"
                                            HorizontalAlignment="Center"
                                            FontWeight="Bold"
                                            Foreground="#000"
                                            Text="Qty" />
                                    </Border>
                                    <Border Grid.Column="2">
                                        <TextBlock
                                            Padding="5"
                                            HorizontalAlignment="Right"
                                            FontWeight="Bold"
                                            Text="Total Weight (Lbs)" />
                                    </Border>
                                </Grid>
                            </Border>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding ConsolidatedSummary, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="451" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Border
                                                Grid.Column="0"
                                                BorderBrush="Black"
                                                BorderThickness="1,0,1,1">
                                                <TextBlock
                                                    Padding="5"
                                                    Foreground="#000"
                                                    Text="{Binding Description}"
                                                    TextWrapping="Wrap" />
                                            </Border>

                                            <Border
                                                Grid.Column="1"
                                                BorderBrush="Black"
                                                BorderThickness="0,0,1,1">
                                                <TextBlock
                                                    Padding="5"
                                                    HorizontalAlignment="Center"
                                                    Foreground="#000"
                                                    Text="{Binding Quantity}" />
                                            </Border>

                                            <Border
                                                Grid.Column="2"
                                                BorderBrush="Black"
                                                BorderThickness="0,0,1,1">
                                                <TextBlock
                                                    Padding="5"
                                                    HorizontalAlignment="Right"
                                                    Foreground="#000"
                                                    Text="{Binding TotalWeight}" />
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <Border
                            Margin="0,10"
                            HorizontalAlignment="Left"
                            BorderBrush="Black"
                            BorderThickness="1,1,1,0">
                            <ItemsControl ItemsSource="{Binding OverallTotals, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="80" />
                                            </Grid.ColumnDefinitions>

                                            <Border
                                                Grid.Column="0"
                                                Background="#e6e6e6"
                                                BorderBrush="Black"
                                                BorderThickness="0,0,1,1">
                                                <TextBlock
                                                    Padding="5"
                                                    HorizontalAlignment="Left"
                                                    FontWeight="SemiBold"
                                                    Foreground="#000"
                                                    Text="{Binding Label}" />
                                            </Border>

                                            <Border
                                                Grid.Column="1"
                                                BorderBrush="Black"
                                                BorderThickness="0,0,0,1">
                                                <TextBlock
                                                    Padding="5"
                                                    FontWeight="SemiBold"
                                                    Foreground="#000"
                                                    Text="{Binding Value}" />
                                            </Border>

                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

