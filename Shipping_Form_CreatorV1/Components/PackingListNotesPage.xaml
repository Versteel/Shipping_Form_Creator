<UserControl
    x:Class="Shipping_Form_CreatorV1.Components.PackingListNotesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shipping_Form_CreatorV1.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1200"
    d:DesignWidth="900"
    Background="#e6e6e6"
    mc:Ignorable="d">
    <Border Padding="20" Background="#e6e6e6">
        <Border
            x:Name="PackingListNotesPage1PrintArea"
            MinWidth="816"
            MinHeight="1056"
            MaxWidth="816"
            MaxHeight="1056"
            Padding="24,48"
            HorizontalAlignment="Center"
            Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <Image
                            Width="150"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Source="{Binding Header.LogoImagePath, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        <TextBlock FontSize="14" Text="2332 Cathy Lane" />
                        <TextBlock FontSize="14" Text="Jasper, Indiana  47546" />
                        <TextBlock FontSize="14" Text="800.876.2120" />
                        <TextBlock FontSize="14" Text="versteel.com" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="25"
                            FontWeight="Bold"
                            Text="Packing List" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                FontSize="18"
                                FontWeight="Bold"
                                Text="Order Number: " />
                            <TextBlock
                                FontSize="18"
                                FontWeight="Bold"
                                Text="{Binding Header.OrderNumber, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <TextBlock
                            HorizontalAlignment="Right"
                            FontSize="14"
                            Text="{Binding PageNumberText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        <Grid
                            Width="150"
                            Margin="0,10"
                            HorizontalAlignment="Right">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="#cccccc"
                                BorderBrush="#000"
                                BorderThickness="1">
                                <TextBlock
                                    Margin="5"
                                    FontWeight="Bold"
                                    Text="Order Date:" />
                            </Border>
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                BorderBrush="#000"
                                BorderThickness="0,1,1,1">
                                <TextBlock Margin="5" Text="{Binding Header.OrdEnterDate, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </Border>

                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Background="#cccccc"
                                BorderBrush="#000"
                                BorderThickness="1,0,1,1">
                                <TextBlock
                                    Margin="5"
                                    FontWeight="Bold"
                                    Text="Ship Date:" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                BorderBrush="#000"
                                BorderThickness="0,0,1,1">
                                <TextBlock Margin="5" Text="{Binding Header.ShipDate, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
                <TextBlock
                    Grid.Row="1"
                    Width="768"
                    TextAlignment="Center"
                    Background="#cccccc"
                    FontSize="25"
                    FontWeight="Bold"
                    Text="Notes" />
                <ItemsControl
                    Grid.Row="2"
                    Margin="0,10"
                    ItemsSource="{Binding Details, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                TextWrapping="Wrap"
                                FontSize="16"
                                Margin="0,0,0,10"
                                Text="{Binding NoteText}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Border>
</UserControl>
