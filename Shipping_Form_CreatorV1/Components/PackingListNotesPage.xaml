                                                Grid.Row="0"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="#000"
                                                Text="{Binding Description}" />

                                            <ItemsControl
                                                Grid.Row="1"
                                                Margin="15,5,0,0"
                                                ItemsSource="{Binding ContainedUnits}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock FontStyle="Italic" Foreground="#333">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text">
                                                                        <Setter.Value>
                                                                            <MultiBinding StringFormat="{}{0} x {1} - {2} (Line {3})">
