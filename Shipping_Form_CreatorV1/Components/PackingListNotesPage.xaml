                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <TextBlock
                                                Grid.Row="2"
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Right"
                                                FontWeight="SemiBold"
                                                Foreground="#000"
