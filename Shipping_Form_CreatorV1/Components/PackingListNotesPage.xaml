                            Padding="5"
                            Background="#e6e6e6"
                            FontSize="22"
                            FontWeight="Bold"
                            Text="Pallet/Handling Unit Manifest"
                            TextAlignment="Center" />
                        <ItemsControl Margin="0,10" ItemsSource="{Binding HandlingUnits, RelativeSource={RelativeSource AncestorType=UserControl}}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
