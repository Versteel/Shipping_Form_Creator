<UserControl
    x:Class="Shipping_Form_CreatorV1.Components.ReportHeaderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Image
                Width="150"
                Height="Auto"
                HorizontalAlignment="Left"
                Source="{Binding Header.LogoImagePath, ElementName=Root}" />
            <TextBlock FontSize="14" Text="2332 Cathy Lane" />
            <TextBlock FontSize="14" Text="Jasper, Indiana 47546" />
            <TextBlock FontSize="14" Text="800.876.2120" />
            <TextBlock FontSize="14" Text="versteel.com" />
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="Packing List" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Order Number: " />
                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding Header.OrderNumberWithSuffix, ElementName=Root}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Right"
                FontSize="14"
                Text="{Binding PageNumberText, ElementName=Root}" />
            <Grid
                Width="150"
                Margin="0,10"
                HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="#e6e6e6"
                    BorderBrush="#000"
                    BorderThickness="1">
                    <TextBlock
                        Margin="5"
                        FontWeight="Bold"
                        Text="Order Date:" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    BorderBrush="#000"
                    BorderThickness="0,1,1,1">
                    <TextBlock Margin="5" Text="{Binding Header.OrdEnterDate, ElementName=Root}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Background="#e6e6e6"
                    BorderBrush="#000"
                    BorderThickness="1,0,1,1">
                    <TextBlock
                        Margin="5"
                        FontWeight="Bold"
                        Text="Ship Date:" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    BorderBrush="#000"
                    BorderThickness="0,0,1,1">
                    <TextBlock Margin="5" Text="{Binding Header.ShipDate, ElementName=Root}" />
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>