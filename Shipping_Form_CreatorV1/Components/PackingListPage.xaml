<Page
    x:Class="Shipping_Form_CreatorV1.Components.PackingListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
    xmlns:constants="clr-namespace:Shipping_Form_CreatorV1.Utilities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shipping_Form_CreatorV1.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="PackingListPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#e6e6e6"
    mc:Ignorable="d">

    <Notification:SfBusyIndicator
        AnimationType="Gear"
        Background="Transparent"
        Foreground="#e41f28"
        IsBusy="{Binding IsBusy}"
        ViewboxHeight="200"
        ViewboxWidth="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Width="840" Background="#e6e6e6">
                <TextBlock
                    Margin="10,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Foreground="#000"
                    Text="TRUCK NUMBER" />
                <syncfusion:ComboBoxAdv
                    Width="100"
                    Height="30"
                    HorizontalContentAlignment="Right"
                    FontSize="18"
                    ItemsSource="{x:Static constants:Constants.ViewOptions}"
                    SelectedItem="{Binding SelectedReportView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <ScrollViewer
                Grid.Row="1"
                Padding="20 0 20 20"
                Background="#e6e6e6"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PageContainer" />
            </ScrollViewer>
        </Grid>
    </Notification:SfBusyIndicator>
</Page>
