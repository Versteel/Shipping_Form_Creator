<Page
    x:Class="Shipping_Form_CreatorV1.Components.PackingListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
    xmlns:constants="clr-namespace:Shipping_Form_CreatorV1.Utilities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:local="clr-namespace:Shipping_Form_CreatorV1.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:vm="clr-namespace:Shipping_Form_CreatorV1.ViewModels"
    x:Name="PLPage"
    Title="PackingListPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#e6e6e6"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>
    <Notification:SfBusyIndicator
        AnimationType="Gear"
        Background="Transparent"
        Foreground="#e41f28"
        IsBusy="{Binding IsBusy}"
        ViewboxHeight="200"
        ViewboxWidth="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Background="#e6e6e6"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="#000"
                        Text="TRUCK NUMBER" />
                    <syncfusion:ComboBoxAdv
                        Width="120"
                        Height="30"
                        HorizontalContentAlignment="Right"
                        FontSize="18"
                        ItemsSource="{Binding ViewOptions}"
                        SelectedItem="{Binding SelectedReportView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Visibility="{Binding IsMultiTruckOrder, Converter={StaticResource BoolToVis}}">
                    <Path
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Data="M10,0 L0,10 L10,20 L10,15 L20,15 L20,5 L10,5 Z"
                        Fill="Red"
                        Stretch="Uniform" />
                    <Border
                        Padding="5"
                        BorderBrush="Red"
                        BorderThickness="2">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                Foreground="Red"
                                Text="ATTENTION" />
                            <TextBlock
                                FontSize="15"
                                Foreground="Red"
                                Text="MULTI-TRUCK ORDER" />
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ScrollViewer
                    Grid.Column="0"
                    Padding="20,0,20,20"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="PageContainer" />
                </ScrollViewer>
                <Border
                    Grid.Column="1"
                    MinWidth="250"
                    Padding="10"
                    Background="WhiteSmoke"
                    Visibility="{Binding HandlingUnitPanelVisibility}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="#000"
                            Text="Handling Units" />
                        <Button
                            Margin="0,0,0,10"
                            Background="#e41f28"
                            Command="{Binding AddHandlingUnitCommand}"
                            Content="Add New Pallet"
                            Cursor="Hand"
                            Foreground="#FFF" />

                        <ItemsControl ItemsSource="{Binding SelectedReport.HandlingUnits}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,8"
                                        Padding="8"
                                        dd:DragDrop.DropHandler="{Binding DataContext, ElementName=PLPage}"
                                        dd:DragDrop.IsDropTarget="True"
                                        BorderBrush="DarkGray"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,0,5"
                                                    FontWeight="Bold"
                                                    Foreground="#000"
                                                    Text="{Binding Description}" />
                                                <syncfusion:ButtonAdv
                                                    Width="20"
                                                    Height="20"
                                                    Margin="0,-5,0,5"
                                                    HorizontalAlignment="Right"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding DataContext.RemoveHandlingUnitCommand, RelativeSource={RelativeSource AncestorType={x:Type local:PackingListPage}}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Label=""
                                                    SmallIcon="/delete.png" />
                                            </Grid>


                                            <Border
                                                MinHeight="50"
                                                Background="Ivory"
                                                BorderBrush="Khaki"
                                                BorderThickness="2">
                                                <ItemsControl ItemsSource="{Binding ContainedUnits}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock
                                                                Margin="2"
                                                                FontStyle="Italic"
                                                                Foreground="#000">
                                                                <Run Text="{Binding Quantity}" />
                                                                x<Run Text="{Binding CartonOrSkid}" />
                                                                <Run Text="{Binding DisplayTypeOfUnit, Mode=OneWay}" />
                                                                (Line<Run Text="{Binding LineItem.LineItemHeader.LineItemNumber}" />
                                                                )</TextBlock>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Border>
                                            <TextBlock
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Right"
                                                FontSize="14"
                                                Foreground="#000"
                                                Text="{Binding TotalWeight, StringFormat='Total Weight: {0} Lbs'}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>


            </Grid>
        </Grid>

    </Notification:SfBusyIndicator>
</Page>